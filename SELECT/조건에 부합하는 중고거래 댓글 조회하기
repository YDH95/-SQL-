SELECT 
	TITLE, 
    b.BOARD_ID, 
    REPLY_ID, 
    a.WRITER_ID, 
    a.CONTENTS, DATE_FORMAT(a.CREATED_DATE, '%Y-%m-%d') AS CREATED_DATE
FROM USED_GOODS_REPLY AS a
LEFT JOIN USED_GOODS_BOARD AS b
ON a.BOARD_ID = b.BOARD_ID
WHERE DATE_FORMAT(b.CREATED_DATE, '%Y-%m') = '2022-10'
ORDER BY a.CREATED_DATE, TITLE
